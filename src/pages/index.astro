---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex flex-col min-h-screen bg-background text-text">
    <Header />
    <main class="flex-1 container mx-auto p-4">
      <section>
        <ul class="list-none p-0 m-0 flex flex-col gap-4 items-center">
          {
            posts.map((post) => (
              <>
                <article class="mb-4 p-4 flex flex-row gap-2 justify-center align-middle hover:text-accent transition-all duration-300 w-full max-w-3xl group cursor-pointer">
                  <a
                    href={`/${post.id}/`}
                    class="items-center gap-4 flex flex-row justify-start"
                  >
                    <div class="md:basis-1/3 md:shrink-0">
                      {post.data.image ? (
												<Image
												width={0}
												height={0}
												src={post.data.image}
												alt=""
												class="group-hover:shadow-[0_0_12px_2px_rgba(71,32,121,0.6)] group-hover:animate-pulse rounded-lg"
                        />
                      ) : (
												<div class="w-full h-48 bg-gray-200 dark:bg-gray-700 rounded-lg flex items-center justify-center">
                          <span class="text-gray-500 dark:text-gray-300">
                            No Image
                          </span>
                        </div>
                      )}
                    </div>
                    <div class="flex flex-col justify-between">
                      <h4 class="text-xl font-bold">{post.data.title}</h4>
                      <p class="text-lg">
                        {post.data.description}
                      </p>
                      <p class="">
                        <FormattedDate date={post.data.pubDate} />
                      </p>
                      <p class="text-sm text-secondary">
                        {post.data.tags && post.data.tags.length > 0
                          ? `#${post.data.tags.join(" #")}`
                          : ""}
                      </p>
                    </div>
                  </a>
                </article>
								<hr class="w-full max-w-3xl border-t border-gray-300 dark:border-gray-600 last:hidden" />
              </>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
