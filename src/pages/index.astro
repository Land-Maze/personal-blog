---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---


<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col min-h-screen bg-background text-text">
		<Header />
		<main class="flex-1 container mx-auto p-4">
			<section>
				<ul class="list-none p-0 m-0 flex flex-col gap-4 items-center">
					{
						posts.map((post) => (
							<li class="mb-4 p-4 flex flex-row gap-2 justify-center align-middle w-fit hover:text-accent transition-all duration-300">
								<a href={`/${post.id}/`} class="group items-center gap-4 flex flex-col">
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" class="group-hover:shadow-[0_0_12px_2px_rgba(71,32,121,0.6)] group-hover:animate-pulse rounded-lg"/>
									)}
									<h4 class="">{post.data.title}</h4>
									<p class="">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
