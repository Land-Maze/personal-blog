---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import ThemeSwitcher from './ThemeSwitcher.astro';
---

<header>
	<nav class="flex flex-row items-center justify-between p-4">
		<h2 class="flex-1/3"><a href="/">{SITE_TITLE}</a></h2>
		<div class="flex flex-row gap-4 flex-1/3 justify-center">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="flex flex-row items-center gap-4 flex-1/3 justify-end">
			<ThemeSwitcher />
			<div id="search-container" class="flex flex-row">
				<!-- NOTE: I need to implement search -->
				<input type="text" id="search-input" placeholder="Search..." class="p-2 rounded" />
			</div>
		</div>
	</nav>
</header>