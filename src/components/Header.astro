---
import { Image } from 'astro:assets';
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import ThemeSwitcher from './ThemeSwitcher.astro';
---

<header class="border-b border-gray-700">
	<nav class="flex flex-col sm:flex-row items-center justify-between p-2 px-4 gap-2">
		<h2 class="flex-1/3">
			<a href="/">
				<Image
					src="https://avatars.githubusercontent.com/u/61432929"
					alt="Logo"
					width={80}
					height={80}
					class="inline-block mr-2 rounded-lg size-12 md:size-14 cursor-pointer"
				/>
				{SITE_TITLE}
			</a></h2>
		<div class="flex flex-row items-center gap-4 flex-1/3 justify-end">
			<ThemeSwitcher />
			<div id="search-container" class="flex flex-row">
				<!-- NOTE: I need to implement search -->
				<input type="text" id="search-input" placeholder="Search..." class="max-w-48 md:max-w-96 px-4 py-2 rounded-xl bg-base-100 text-base text-foreground border border-accent-300 focus:outline-none focus:ring-2 focus:ring-accent transition-all" />
			</div>
		</div>
	</nav>
</header>